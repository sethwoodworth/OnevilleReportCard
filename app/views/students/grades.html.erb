<% possible_scores = {'m' => "Meets the standard consistently", 's' => "Sometimes meets the standard", 'n' => "Not meeting the standard", 'na' => "Standard not assessed this term"} %>

<br />
<h2 class="span-16"> Academic Performance </h2>
<div id="standards-explanation" class="span-6">
  <% possible_scores.each_pair do |abbreviation, description| %>
    <div class="<%="grade-#{abbreviation}"%>"> <span class="metric"><%= abbreviation %> </span> - <%= description %> </div>
  <% end %>
  
</div>

  <% @subjects.each do |subject| %>
  <div class="span-24 subject">
      <div class="subject-title">
        <%= subject.description %>
      </div>
    <table class= "subject-details span-15 scores">
        <% subject.standards.each do |standard| %>
          <tr class="metrics-and-scores border">
              <td>
                 <%= standard.description.html_safe %>
               </td>
               <% standard.assessments.each do |a| %>
                 <td class="grade-<%= a.score %>">
                   <%= a.score %>
                 </td>
               <% end %>
          </tr>
        <% end %>
    </table>
    <div class="prepend-1 span-3">
      <% form_tag(save_comment_path, :remote => true, :name => "comment #{subject.id}") do %>
        <% if subject.comment_list.blank? %>
          <%= text_area_tag "comment", "Write comments here" %>
        <% else %>
          <%= text_area_tag "comment", subject.comment_list.first %>
        <% end %>
        <%= hidden_field_tag "model", "subject" %>
        <%= hidden_field_tag "object_id", subject.id %>
        <%= submit_tag "Save changes" %>
      <% end %>
    </div>
  </div>
  <% end %>
