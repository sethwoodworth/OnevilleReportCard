<h2 class="shallow-bottom span-14 heading">Attendance</h2>
<div id="absence-summary" class="span-3 last">
  <div class="span-3">
    Total absences: <%= Attendance.where(:student_id => @student.id).map{|a| a.absences}.flatten.count %>
</div>
<div class="span-3">
  Total days late: <%= Attendance.where(:student_id => @student.id).map{|a| a.lates}.flatten.count %>
  </div>
</div>


<hr />
<% @attendances.each do |attendance| %>
  <div class="span-15">
    <%= render :partial => "calendar", :locals => {:attendance => attendance} %>
    <%= render :partial => "month_summary", :locals => {:attendance => attendance} %>
  </div>
    <%= render :partial => "attendance_comment_box", :locals => {:attendance => attendance} %>
<% end %>
